{
  "name": "comfyui-image-processor",
  "title": "ComfyUI Image Processor",
  "description": "Process images via ComfyUI with custom workflows and prompts",
  "icon": "icon.png",
  "author": "Jan_Devera",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "ComfyUI Convert",
      "description": "Process images with ComfyUI workflows",
      "mode": "view"
    },
    {
      "name": "manage-workflows",
      "title": "Manage Workflows",
      "description": "Manage ComfyUI workflow files",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "type": "textfield",
      "required": true,
      "title": "ComfyUI Server URL",
      "description": "URL address of the ComfyUI server",
      "default": "http://localhost:7860"
    },
    {
      "name": "haUrlInternal",
      "type": "textfield",
      "required": false,
      "title": "Home Assistant URL (Internal)",
      "description": "Internal URL for Home Assistant",
      "default": ""
    },
    {
      "name": "haUrlExternal",
      "type": "textfield",
      "required": false,
      "title": "Home Assistant URL (External)",
      "description": "External URL for Home Assistant",
      "default": ""
    },
    {
      "name": "haToken",
      "type": "password",
      "required": false,
      "title": "Home Assistant Token",
      "description": "Authorization token for Home Assistant"
    },
    {
      "name": "comfyuiSwitch",
      "type": "textfield",
      "required": false,
      "title": "ComfyUI Switch Entity",
      "description": "Entity ID of the switch in Home Assistant",
      "default": "switch.comfyui"
    },
    {
      "name": "outputSuffix",
      "type": "textfield",
      "required": true,
      "title": "Output Suffix",
      "description": "Suffix for output files",
      "default": "_edited"
    },
    {
      "name": "workflowsPath",
      "type": "textfield",
      "required": true,
      "title": "Workflows Path",
      "description": "Path to the folder with workflow files",
      "default": "~/Documents/ComfyUI/workflows"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.1",
    "@raycast/utils": "^1.12.5",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@raycast/eslint-config": "^1.0.11",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "globals": "^17.3.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "overrides": {
    "@types/react": "18.2.27"
  },
  "resolutions": {
    "@types/react": "18.2.27"
  }
}
