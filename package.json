{
  "name": "comfyui-image-processor",
  "title": "ComfyUI Image Processor",
  "description": "Process images via ComfyUI with custom workflows and prompts",
  "icon": "icon.png",
  "author": "Jan_Devera",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "ComfyUI Convert",
      "description": "Process images with ComfyUI workflows",
      "mode": "view"
    },
    {
      "name": "screenshot",
      "title": "Screenshot to ComfyUI",
      "description": "Take screenshot and process with ComfyUI",
      "mode": "no-view"
    },
    {
      "name": "manage-workflows",
      "title": "Manage Workflows",
      "description": "Manage ComfyUI workflow files",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "serverUrl",
      "type": "textfield",
      "required": true,
      "title": "ComfyUI Server URL",
      "description": "URL adresa ComfyUI serveru",
      "default": ""
    },
    {
      "name": "haUrlInternal",
      "type": "textfield",
      "required": false,
      "title": "Home Assistant URL (Internal)",
      "description": "Interní URL pro Home Assistant",
      "default": ""
    },
    {
      "name": "haUrlExternal",
      "type": "textfield",
      "required": false,
      "title": "Home Assistant URL (External)",
      "description": "Externí URL pro Home Assistant",
      "default": ""
    },
    {
      "name": "haToken",
      "type": "password",
      "required": false,
      "title": "Home Assistant Token",
      "description": "Autorizační token pro Home Assistant"
    },
    {
      "name": "comfyuiSwitch",
      "type": "textfield",
      "required": false,
      "title": "ComfyUI Switch Entity",
      "description": "Entity ID přepínače v Home Assistant",
      "default": "switch.comfyui"
    },
    {
      "name": "outputSuffix",
      "type": "textfield",
      "required": true,
      "title": "Output Suffix",
      "description": "Přípona pro výstupní soubory",
      "default": "_edited"
    },
    {
      "name": "workflowsPath",
      "type": "textfield",
      "required": true,
      "title": "Workflows Path",
      "description": "Cesta ke složce s workflow soubory",
      "default": "~/Documents/ComfyUI/workflows"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.1",
    "@raycast/utils": "^1.12.5",
    "node-fetch": "^3.3.2",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "overrides": {
    "@types/react": "18.2.27"
  },
  "resolutions": {
    "@types/react": "18.2.27"
  }
}
